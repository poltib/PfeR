<section>
<div class="container">
<h2>Sign up</h2>

<%= form_for(resource, :html => { :class => 'createForm' }, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<ul>
	<li><%= f.label :username %><br />
  <%= f.text_field :username, :autofocus => true %></li>

  <li><%= f.label :email %><br />
  <%= f.email_field :email %></li>

  <li><%= f.label :password %><br />
  <%= f.password_field :password %></li>

  <li><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></li>

  <li><%= f.submit "Sign up" %></li>
	<%= render "devise/shared/links" %>
 </ul>
<% end %>

</div>
</section>
