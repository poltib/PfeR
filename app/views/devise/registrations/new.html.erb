<section>
<div class="container">
<h2>Sign up</h2>

<%= form_for(resource, :html => { :class => 'create' }, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<ul>
  <li><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></li>

  <li><%= f.label :password %><br />
  <%= f.password_field :password %></li>

  <li><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></li>

  <li><%= f.submit "Sign up" %></li>
 </ul>
<% end %>

<%= render "devise/shared/links" %>
</div>
</section>
