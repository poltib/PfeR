<% content_for :title do %>
  Inscription | Sportfun
<% end %>
<section>
<div class="container">
  <div class="entity__title">
  <%= link_to "Connexion avec Facebook", user_omniauth_authorize_path(:facebook) %>
    <h2 role="heading" aria-level="2">Inscription</h2>
  </div>
  <div class="entity__form">
    <%= form_for(resource, :html => { :class => 'createForm' }, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <ul>
          <li><%= f.label :username %><br />
          <%= f.text_field :username, :autofocus => true %></li>

          <li><%= f.label :email %><br />
          <%= f.email_field :email %></li>

          <li><%= f.label :password %><br />
          <%= f.password_field :password %></li>

          <li><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation %></li>

          <li><%= f.submit "Inscription" %></li>
        </ul>
      </fieldset>
    <% end %>
  </div>
  </div>
</section>
