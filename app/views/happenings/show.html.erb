<section>
  <div class="container">
    <h2 role="heading" aria-level="2" class="hidden">Content</h2>
    <h2 class="raceTitle"><span>Liège | <%= @happening.date %></span><%= @happening.name %></h2>
    <div class="head">
      <div class="visuels">
        <div class="map">
					<div id="map_canvas"></div>
        	<div id="elevation_chart"></div>
        </div>
        <div class="aside">
          <div class="users">
            <h3 role="heading" aria-level="3">Participer</h3>
            <p><%= @happening.users.count %> <%= link_to 'utilisateurs y participent', happening_user_statuses_path(@happening) %></p>
          </div>
          <ul class="share">
            <li>
            <% if @happening.user_statuses.include? current_user %>
              <%= form_for ([@happening, @happening.user_statuses.build]) do |f| %>
                <%= f.submit %>
              <% end %>
            <% else %>
              
            <% end %>
            <!-- <i class="icon-check"></i>Participer -->
            </li>
            <li>
              <%= link_to(new_happening_user_path(@happening)) do %>
                <i class="icon-user-add"></i>Inviter amis
              <% end %>
            </li>
            <li>
              <%= link_to(new_happening_track_path(@happening)) do %>
                <i class="icon-user-add"></i>Ajouter un parcours
              <% end %>
            </li>
            <li><a href="#">&#9829; (89)</a></li>
            <li class="shareButton"><i class="shareDart">&rarr;</i>&nbsp;share
              <ul class="shareForum">
                <li><a href="#"><i class="icon-facebook-squared"></i></a></li>
                <li><a href="#"><i class="icon-gplus-squared"></i></a></li>
                <li><a href="#"><i class="icon-twitter-squared"></i></a></li>
                <li><a href="#"><i class="icon-mail"></i></a></li>
                <li><a href="#"><i class="icon-rss"></i></a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="raceDetails">
      <div class="informations">
        <h3 role="heading" aria-level="3">Informations</h3>
        <ul>
          <li class="address">Rue Haute 11 400 flémalle</li>
          <li>description :</li>
        </ul>
        <h3 role="heading" aria-level="3">Users</h3>
        <ul>
          <% for user in @happening.users %>
            <li><%= link_to user.username, user_path(user) %></li>
          <% end %>
        </ul>
      </div>
      <div class="gallery">
        <h3 role="heading" aria-level="3">Gallerie photo</h3>
        <ul class="thumbs">
          <li><img src="../img/race.png"></li>
        </ul>
      </div>
    </div>
    <div class="sponsors">
      <h3 role="heading" aria-level="3">Sponsors</h3>
      <ul class="thumbs">
        <li><img src="../img/race.png"></li>
      </ul>
    </div>
  </div>
</section>
<% content_for :script do %>
  <%= google_maps_api %>
  <% for track in @happening.tracks %>
    <%= track_id_to_js(track.id) if track %>
  <% end %>
<% end %>