<% content_for :title do %>
  <%= @group.name %> | Sportfun
<% end %>
<section>
  <div class="container">
    <h2 role="heading" aria-level="2" class="hidden">Content</h2>
    <div class="left_column">
      <%= render 'groupNav' %>
    </div>
    <div class="primary_content">
      <h2 role="heading" aria-level="2">Activit√©s du groupe</h2>
      <div class="calendar__header">
        <h3 role="heading" aria-level="3">
          <span class="previous__month"><%= link_to "#{'< '+l(@date - 1.month, :format => "%B")}", group_path(@group, date: @date - 1.month) %></span>
          <%= "#{l(@date, :format => "%B")} #{@date.year}" %>
          <span class="next__month"><%= link_to "#{l(@date + 1.month, :format => "%B")+' >'}", group_path(@group, date: @date + 1.month) %></span>
        </h3>
      </div>
      <div>
        <%= calendar @date do |date| %>
          <%= date.day  %>
        <% end %>
      </div>
    </div>
  </div>
</section>