<li class="commentItem">
	<article class="comment">
		<header class="comment__header">
			<%= image_tag comment.user.avatar.url(:thumb) %>
			<% if user_signed_in? &&  current_user.id != comment.user.id %>
        <%= link_to new_user_conversation_path(comment.user) do %>
					<i class="icon-comment-1"></i>
				<% end %>
       <% end %>
		</header>
		<div class="comment__body">
			<h4>
				<%= link_to comment.user.username, user_path(comment.user) %>
				<span>Il y a <%= distance_of_time_in_words_to_now(comment.created_at, include_seconds: true) %></span>
				<% if  user_signed_in? && comment.user.id == current_user.id %>
					<div class="delete">
						<span  class="tooltip" data-tooltip="Supprimer">
							<%= button_to [@forum, comment], method: :delete do %>
								<i class="icon-cancel"></i>
							<% end %>
						</span>
					</div>
				<% end %>
			</h4>
			<p><%= markdown(comment.comment) %></p>
		</div>
	</article>
</li>
