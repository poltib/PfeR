<section>
  <div class="container">
    <h2 role="heading" aria-level="2" class="hidden">Content</h2>
    <div class="left_column">
      <h2 role="heading" aria-level="2">Salut, <%= @user.username %>!</h2>
      <h3 role="heading" aria-level="3">Favorits</h3>
      <ul>
        <% for favorite in @user.favorites do %>
          <li><%= favorite.favoritable_type %> <%= link_to favorite.favoritable.name, favorite.favoritable %></li>
        <% end %>
      </ul>
    </div>
    <div class="primary_content">
      <h2 role="heading" aria-level="2">Vos activit√©es</h2>
      <div class="calendar__header">
        <h3 role="heading" aria-level="3">
          <span class="previous__month"><%= link_to "#{'< '+l(@date - 1.month, :format => "%B")}", user_root_path(date: @date - 1.month) %></span>
          <%= "#{l(@date, :format => "%B")} #{@date.year}" %>
          <span class="next__month"><%= link_to "#{l(@date + 1.month, :format => "%B")+' >'}", user_root_path(date: @date + 1.month) %></span>
        </h3>
      </div>
      <div>
        <%= calendar @date do |date| %>
          <%= date.day  %>
          <% if @events_by_date[date] %>
            <ul class="calendar__events">
              <% @events_by_date[date].each do |event| %>
                <li><%= link_to event.happening.name, event.happening %></li>
              <% end %>
            </ul>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>