<%= form_for :conversation, url: :conversations do |f| %>
	<% if @user %>
		<%= f.hidden_field :recipients, :value =>  @user.username %>
	<% else %>
		<%= f.label :recipients, "Destinataires" %>
  	<%= f.text_field :recipients %>
  <% end %>
  <%= f.label :subject, "Sujet" %>
  <%= f.text_field :subject %>
  <%= f.label :body, "Message" %>
  <%= f.text_area :body %>
  <%= f.button :Envoyer %>

<% end %>